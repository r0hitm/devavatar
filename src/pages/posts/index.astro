---
import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { SITE } from '@/consts';
import { getCollection } from 'astro:content';
import FormattedDate from '@/components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort((a, b) => b.data.pubDatetime.valueOf() - a.data.pubDatetime.valueOf());
---

<!doctype html>
<html lang='en'>
    <head>
        <BaseHead title={SITE.title} description={SITE.description} />
    </head>
    <body>
        <Header />
        <main>
            <section>
                <ul>
                    {
                        posts.map(post => (
                            <li>
                                <a href={`/posts/${post.id}/`}>
                                    {/* <img width={720} height={360} src={post.data.heroImage} alt="" /> */}
                                    <h4 class='title' transition:name={post.data.title.replaceAll(/\s/g, '-')}>
                                        {post.data.title}
                                    </h4>
                                    <p class='date'>
                                        <FormattedDate date={post.data.pubDatetime} />
                                    </p>
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </section>
        </main>
        <Footer />
    </body>
</html>
